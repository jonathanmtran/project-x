<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="edu.fullerton.csu.jmtran.projectx.model" default-cascade="none">

    <class name="MailboxMessage" table="MAILBOX_MESSAGES">
        <id name="id" column="ID" type="long">
            <generator class="native"/>
        </id>

        <many-to-one name="userId" column="USER_ID" class="edu.fullerton.csu.jmtran.projectx.model.User" />
        <many-to-one name="messageId" column="MESSAGE_ID" class="edu.fullerton.csu.jmtran.projectx.model.Message" />
        <property name="massMessagingId" column="MASS_MESSAGING_ID" type="long" />
        <property name="messagingService" column="MESSAGING_SERVICE" type="string" />
        <property name="receivedDate" column="RECEIVED_DATE" type="timestamp"/>
    </class>

</hibernate-mapping>
